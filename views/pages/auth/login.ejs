<h2>Login</h2>

<form mthod="POST">
    <div class="mb-3">
        <label for ="" class="form-label">Email</label>
        <input 
        type="email" 
        name="email" 
        id="email"
        class="form-control"
        required 
        value="<%- form.email%>"
        />
      
    </div>
    <div class="mb-3">
        <label for ="" class="form-label">Password</label>
        <input 
        type="password" 
        name="password" 
        id="password"
        class="form-control"
        required 
        value="<%- form.password%>"
        />
      
    </div>
        <% if (errors) { %> 
             <div class="alert alert-danger">Błędny email/hasło</div>
        <% } %>
    <button class ="btn btn-primary">Zaloguj</button>    
</form>

